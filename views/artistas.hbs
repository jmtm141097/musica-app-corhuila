{{> head}}

{{> navbar }}
<div class="row">
    <div class="col-sm-8">
        <div class="row m-3">
            <div class="col-sm-12 text-right">
                {{> crearArtistaModal}}
            </div>
        </div>
        <div class="row">
            {{#if artistas}}
            {{#each artistas}}
            <div class="col-sm-12 contenido">
                <div class="card">
                    <div class="card-header">
                        <h3>{{this.nombreCompleto}}</h3>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Descripcion del Artista:</h4>
                        <h6 class="card-subtitle mb-2 text-muted">Fecha de nacimiento: {{this.fechaNacimiento}}</h2>
                        <div class="row">
                            <div class="col-md-7">
                                <p class="card-text text-justify">{{this.descripcionArtista}}</p>
                            </div>
                            <div class="col-md-5 align-self-center">
                                <img src="{{this.imagenArtista}}" alt="{{this.nombreCompleto}}"
                                    class="img-content img-thumbnail">
                            </div>
                        </div>
                        <div class="row comentario">
                            <div class="col-xl-1 col-lg-1 col-md-2 col-sm-1 col-2 hidden-sm hidden-xs">
                                <i class="fas fa-user fa-3x logo-user"></i>
                            </div>
                            <div class="col-xl-11 col-lg-11 col-md-10 col-sm-11 col-10 form-group">
                                <textarea class="form-control" placeholder="Comentario"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="col-sm-12 contenido text-center">
                <h1>No se han registrado Artistas.</h1>
            </div>
            {{/if}}
        </div>
    </div>
    {{> buscador}}
</div>
{{> footer}}