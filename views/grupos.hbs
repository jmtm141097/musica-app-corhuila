{{> head}}

{{> navbar }}
<div class="row">
    <div class="col-sm-8">
        <div class="row m-3">
            <div class="col-sm-12 text-right">
                {{> crearGrupoModal}}
            </div>
        </div>
        {{#if errores}}
            <div class="alert alert-danger text-left" role="alert">
                <h4 class="alert-heading">Error!</h4>
                <ul>
                    {{#each errores}}
                    <li>{{this.texto}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
        <div class="row">
            {{#if grupos}}
            {{#each grupos}}
            <div class="col-sm-12 contenido">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-uppercase">{{this.nombreGrupo}}</h3>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Descripcion del Grupo:</h4>
                        <div class="row">
                            <div class="col-md-7">
                                <p class="card-text text-justify d-inline-block text-truncate" style="max-width: 400px">{{this.descripcionGrupo}}</p>
                                <a href="/grupo/{{this.url}}" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Seguir leyendo...</a>
                            </div>
                            <div class="col-md-5 align-self-center">
                                <img src="{{this.imagenGrupo}}" alt="{{this.nombreGrupo}}"
                                    class="img-content img-thumbnail">
                            </div>
                        </div>
                        <div class="row comentario">
                            <div class="col-xl-1 col-lg-1 col-md-2 col-sm-1 col-2 hidden-sm hidden-xs">
                                <i class="fas fa-user fa-3x logo-user"></i>
                            </div>
                            <div class="col-xl-11 col-lg-11 col-md-10 col-sm-11 col-10 form-group">
                                <textarea class="form-control" placeholder="Comentario"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="col-sm-12 contenido text-center">
                <h1>No se han registrado grupos.</h1>
            </div>
            {{/if}}
        </div>
    </div>
    {{> buscador}}
</div>
{{> footer}}