<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#crearGrupo">
    Nuevo Grupo
</button>

<!-- Modal -->
<div class="modal fade" id="crearGrupo" data-backdrop="static" data-keyboard="false" tabindex="-1"
    aria-labelledby="crearGrupoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="crearGrupoLabel">Creacion de un Nuevo Grupo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/nuevoGrupo" method="POST" enctype="multipart/form-data" class="was-validated">

                <div class="modal-body text-left">
                    <div class="form-group">
                        <label for="txtNombreGrupo">Nombre del Grupo:</label>
                        <input type="text" class="form-control" minlength="3" maxlength="45" id="txtNombreGrupo"
                            name="txtNombreGrupo" required>
                    </div>
                    <div class="form-group">
                        <label for="txtDescripcionGrupo">Descripcion del Grupo:</label>
                        <textarea class="form-control" name="txtDescripcionGrupo" id="txtDescripcionGrupo" cols="30"
                            rows="10" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtImagenGrupo">Cargar imagen del Grupo:</label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="txtImagenGrupo"
                            name="txtImagenGrupo" lang="es">
                            <label class="custom-file-label" for="txtImagenGrupo">Seleccionar Archivo</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>