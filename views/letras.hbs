{{> head}}

{{> navbar }}
<div class="row">
    <div class="col-sm-8">
        <div class="row m-3">
            <div class="col-sm-12 text-right">
                {{> crearLetraModal}}
            </div>
        </div>
        {{#if errores}}
            <div class="alert alert-danger text-left" role="alert">
                <h4 class="alert-heading">Error!</h4>
                <ul>
                    {{#each errores}}
                    <li>{{this.texto}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
        <div class="row">
            {{#if letras}}
                <div class="list-group">
                    <div class="letras">
                        {{#each letras}}
                            <a href="/letra/{{this.url}}" data-letra="{{this.idLetra}}" class="list-group-item list-group-item-action visitas">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">{{this.nombreCancion}}</h5>
                                    <small>{{this.numeroVisitas}} Visitas</small>
                                </div>
                                <p class="mb-1 text-truncate" style="width: 700px;">{{this.descripcionCancion}}</p>
                                <small>Haz click, si quieres leer la letra!</small>
                            </a>
                        {{/each}}
                    </div>
                </div>
            {{else}}
                <div class="alert alert-danger" role="alert">
                    <h1>No se han registrado letras</h1>
                </div>
            {{/if}}
        </div>
    </div>
    {{> buscador}}
</div>
